<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8" />
  <title>掲示板 <%= user.display_name %> さんのプロフィール</title>
</head>

<body>
  <h1><%= user.display_name %> さんのプロフィール</h1>

  <a href="/">トップに戻る</a>
  <h2>プロフィール</h2>
  <img src="<%= user.profile.icon_url %>" width="100" width="100" alt="img">
  <h3><%= user.display_name %></h3>
  <p>@<%= user.id %></p>
  <p><%= user.profile.bio %></p>
  <p>投稿数: <%= postCount %></p>
  <% if (isMe) { %>
  <button><a href="/user/profile">プロフィールを編集する</a></button>
  <% } %>
  <br>
  <hr>
  <h2>過去の投稿</h2>
  <% user.post.forEach(function (value) { %>
  <p>投稿日：<%= value.created_at %></p>
  <p><%= value.content %></p>
  <br>
  <% }); %>
</body>

</html>